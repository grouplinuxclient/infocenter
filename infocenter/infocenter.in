import os
import sys
import signal
import locale
import gettext

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('de.volkswagen.infocenter', localedir)
locale.textdomain('de.volkswagen.infocenter')
gettext.install('de.volkswagen.infocenter', localedir)

try:
  gettext.bindtextdomain('de.volkswagen.infocenter', localedir)
  gettext.textdomain('de.volkswagen.infocenter')
except:
  print('Cannot load translations.')

if __name__ == '__main__':
    import gi

    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'infocenter.gresource'))
    resource._register()

    from infocenter import main
    sys.exit(main.main(VERSION))